
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }

    // USERS
    match /users/{userId} {
      // Admins can create new users (agents)
      allow create: if isAdmin();
      
      // Users can read their own document, Admins can read any user document
      allow get: if (isSignedIn() && isOwner(userId)) || isAdmin();
      
      // Users can update their own document
      // Admins can update any user document (e.g. to change roles - future)
      allow update: if (isSignedIn() && isOwner(userId)) || isAdmin();

      // Admins can delete users (agents)
      allow delete: if isAdmin();
      
      // Admins can list all users
      allow list: if isAdmin();
    }

    // CHATS
    match /chats/{chatId}/{document=**} {
      // For now, allow signed-in users to read/write to chats
      // This should be secured further based on chat participants
      allow read, write: if isSignedIn();
    }

    // LEADS
    match /leads/{leadId} {
      // Allow any signed-in user to create, read, update, or delete leads for now
      allow read, write: if isSignedIn();
    }
  }
}

    